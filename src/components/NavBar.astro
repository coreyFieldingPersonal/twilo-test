---
import { Image } from "astro:assets"
import icon from "../assets/icons/twilo-logo.svg"
---

<nav>
  <div class="inner">
    <a href="/" aria-label="Twilo home page"
      ><Image src={icon} width="100" height="30" alt="Twilo" />
    </a>
    <a
      href="#"
      aria-label="Contact page"
      rel="noreferrer"
      class="link btn--primary">Contact Us</a
    >
  </div>
</nav>

<style lang="scss">
  @import "../styles/variables";
  nav {
    position: fixed;
    height: 96px;
    width: 100%;
    left: 0;
    top: 0;
    align-content: center;
    justify-content: space-between;
    background-color: $white;
    z-index: 20;
  }

  .inner {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 24px 22px;
    margin: 0 auto;

    @media (min-width: $tablet) {
      max-width: calc(100vw - (256px * 2));
    }
  }
</style>
